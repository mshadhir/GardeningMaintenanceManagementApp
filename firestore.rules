rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() { return request.auth != null; }
    function isAdmin() { return signedIn() && request.auth.token.role == 'admin'; }
    function isWorker() { return signedIn() && request.auth.token.role == 'worker'; }

    match /sites/{siteId} {
      allow read: if signedIn();
      allow create, update, delete: if isAdmin();
    }

    match /tasks/{taskId} {
      allow read: if signedIn();
      allow create, update: if isAdmin() || isWorker();
      allow delete: if isAdmin();
    }

    match /schedule/{scheduleId} {
      allow read: if signedIn();
      allow write: if isAdmin();
    }

    match /visitLogs/{visitLogId} {
      allow read: if signedIn();
      allow create: if isAdmin() || isWorker();
      allow update, delete: if isAdmin();
    }

    match /userRoles/{roleId} {
      allow read, write: if isAdmin();
    }
  }
}
